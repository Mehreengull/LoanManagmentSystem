@model IEnumerable<EMSProj.Department>

@{
    ViewBag.Title = "Department List";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Departments List</h2>

<div style="margin:0;width:100%;border:2px solid Green;padding:20px;">

    <p>
        @Html.ActionLink("Create New", "AddDepartment", "Admin", null, new { @class = "btn btn-success" })
    </p>
    <table class="table">
        <tr>
            <th>
                Dep#
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.depId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditDepartment", new { id = item.depId }) |
                    @Html.ActionLink("Delete", "DeleteDepartment", new { id = item.depId })
                </td>
            </tr>
        }

    </table>
</div>